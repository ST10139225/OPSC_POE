<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Achievements.AchievementsMain">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Achievements_main"
        android:background="@color/white"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/linehalf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="176dp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_item"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toTopOf="@+id/linehalf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/Login_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Achievements"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_item">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:layout_constraintBottom_toBottomOf="@id/body"
                app:layout_constraintLeft_toLeftOf="@id/body"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/body"
                app:layout_constraintVertical_bias="0.958"
                android:visibility="gone"
                >

                <ImageView

                    android:id="@+id/img_ach4"
                    android:layout_width="89dp"
                    android:layout_height="89dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/one"
                    app:layout_constraintBottom_toBottomOf="@+id/card4"
                    app:layout_constraintHorizontal_bias="0.075"
                    app:layout_constraintLeft_toLeftOf="@+id/card4"
                    app:layout_constraintRight_toRightOf="@+id/card4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/card4"
                    app:layout_constraintVertical_bias="0.504" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical"
                    app:flow_verticalGap="10mm"
                    app:layout_constraintBottom_toBottomOf="@+id/card4"
                    app:layout_constraintRight_toRightOf="@+id/card4"
                    app:layout_constraintStart_toEndOf="@+id/img_ach4"
                    app:layout_constraintTop_toTopOf="@+id/card4">

                    <TextView
                        android:id="@+id/lblStarter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Starter: Added first item"

                        android:textSize="17dp"
                        app:layout_constraintLeft_toLeftOf="@id/card1"
                        app:layout_constraintTop_toTopOf="@id/card1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category: "
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="@id/card1"
                        app:layout_constraintTop_toTopOf="@id/card1" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_constraintBottom_toBottomOf="@id/body"
                app:layout_constraintLeft_toLeftOf="@id/body"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/body"
                app:layout_constraintVertical_bias="0.321"
                android:visibility="gone"
                >

                <ImageView

                    android:id="@+id/img_ach2"
                    android:layout_width="89dp"
                    android:layout_height="89dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/anniversary"
                    app:layout_constraintBottom_toBottomOf="@+id/card2"
                    app:layout_constraintHorizontal_bias="0.075"
                    app:layout_constraintLeft_toLeftOf="@+id/card2"
                    app:layout_constraintRight_toRightOf="@+id/card2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/card2"
                    app:layout_constraintVertical_bias="0.504" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical"
                    app:flow_verticalGap="10mm"
                    app:layout_constraintBottom_toBottomOf="@+id/card2"
                    app:layout_constraintRight_toRightOf="@+id/card2"
                    app:layout_constraintStart_toEndOf="@+id/img_ach2"
                    app:layout_constraintTop_toTopOf="@+id/card2">

                    <TextView
                        android:id="@+id/lblPackrat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Packrat: Added 10 items"

                        android:textSize="17dp"
                        app:layout_constraintLeft_toLeftOf="@id/card1"
                        app:layout_constraintTop_toTopOf="@id/card1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category:  "
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="@id/card1"
                        app:layout_constraintTop_toTopOf="@id/card1" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:layout_constraintBottom_toBottomOf="@id/body"
                app:layout_constraintLeft_toLeftOf="@id/body"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/body"
                app:layout_constraintVertical_bias="0.648"
                android:visibility="gone"
                >

                <ImageView

                    android:id="@+id/img_ach3"
                    android:layout_width="89dp"
                    android:layout_height="89dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/medal"
                    app:layout_constraintBottom_toBottomOf="@+id/card3"
                    app:layout_constraintHorizontal_bias="0.075"
                    app:layout_constraintLeft_toLeftOf="@+id/card3"
                    app:layout_constraintRight_toRightOf="@+id/card3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/card3"
                    app:layout_constraintVertical_bias="0.504" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical"
                    app:flow_verticalGap="10mm"
                    app:layout_constraintBottom_toBottomOf="@+id/card3"
                    app:layout_constraintRight_toRightOf="@+id/card3"
                    app:layout_constraintStart_toEndOf="@+id/img_ach3"
                    app:layout_constraintTop_toTopOf="@+id/card3">

                    <TextView
                        android:id="@+id/lblCollector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collector: Added 3 items"

                        android:textSize="17dp"
                        app:layout_constraintLeft_toLeftOf="@id/card1"
                        app:layout_constraintTop_toTopOf="@id/card1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category:  "
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="@id/card1"
                        app:layout_constraintTop_toTopOf="@id/card1" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:layout_constraintBottom_toBottomOf="@id/body"
                app:layout_constraintLeft_toLeftOf="@id/body"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/body"
                app:layout_constraintVertical_bias="0.002"
                android:visibility="gone"
                >

                <ImageView

                    android:id="@+id/img_escort"
                    android:layout_width="89dp"
                    android:layout_height="89dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/awards"
                    app:layout_constraintBottom_toBottomOf="@+id/card1"
                    app:layout_constraintHorizontal_bias="0.075"
                    app:layout_constraintLeft_toLeftOf="@+id/card1"
                    app:layout_constraintRight_toRightOf="@+id/card1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/card1"
                    app:layout_constraintVertical_bias="0.504" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical"
                    app:flow_verticalGap="10mm"
                    app:layout_constraintBottom_toBottomOf="@+id/card1"
                    app:layout_constraintRight_toRightOf="@+id/card1"
                    app:layout_constraintStart_toEndOf="@+id/img_escort"
                    app:layout_constraintTop_toTopOf="@+id/card1">

                    <TextView
                        android:id="@+id/lblAchiever"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/achiever_achieved_your_collection_goal"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@id/card1"
                        app:layout_constraintTop_toTopOf="@id/card1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category:  "
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="@id/card1"
                        app:layout_constraintTop_toTopOf="@id/card1" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>